<%= form_with(model: @member, url: url, method: method, local: true) do |form| %>
  <% if @member.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h5><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h5>
      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>  
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :surname %>
    <%= form.text_field :surname, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :dob %>
    <%= form.date_field :dob, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :date_joined %>
    <%= form.date_field :date_joined, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :date_left %>
    <%= form.date_field :date_left, class:"form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Save", class:"btn btn-success min-width-btn" %>
  </div>
<% end %>
