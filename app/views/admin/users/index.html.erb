<div class="container">
  <div class='page-header'>
    <div class='btn-toolbar float-right'>
      <div class='btn-group'>
      <%= link_to 'New User', new_admin_user_path, class:"btn btn-success min-width-btn" %>
      </div>
    </div>
    <h1>Users</h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Email</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td>
            <%= link_to 'Edit', edit_admin_user_path(:id => user.id),class:"btn btn-primary min-width-btn"  %>     
            <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger min-width-btn"%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
